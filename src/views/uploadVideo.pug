extends layout

block content
    if errorMessage 
        span=errorMessage
    form(method="post")
        input(type="text", name="title", placeholder="Title Name", required, maxlength="100")
        input(type="text", name="description", placeholder="Description", required, maxlength="5000")
        input(type="text", name="hashtags", placeholder="Hashtags, separated by comma.", required)
        input(type="submit", value="Upload Video")