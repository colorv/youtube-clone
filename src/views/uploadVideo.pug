extends layout

block content
    if errorMessage 
        span=errorMessage
    form(method="post")
        input(name="title", type="text", placeholder="Title Name", required, maxlength="100")
        input(name="description", type="text", placeholder="Description", required, maxlength="5000")
        input(name="hashtags", type="text", placeholder="Hashtags, separated by comma.", required)
        input(type="submit", value="Upload Video")