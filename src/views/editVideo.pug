extends layout 

block content 
    h4 Update Video
    form(method="post")  
        input(name="title", type="text", placeholder="Video Title", value=video.title, required, maxlength="100")
        input(name="description", type="text", placeholder="Description", value=video.description, required, maxlength="5000")
        input(name="hashtags", type="text", placeholder="Hashtags, separated by comma.", value=video.hashtags.join(), required)
        input(type="submit", value="Save")