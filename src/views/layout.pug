doctype html
html(lang="ko")
    head
        title #{pageTitle} | Youtube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body 
        header
            if testUser.loggedIn
                small Hello #{testUser.username}
            nav
                ul
                    if testUser.loggedIn 
                        li
                            a(href="/logout") Log Out
                    else
                        li
                            a(href="/login") Log In
            h1=pageTitle
        main
            block content
        include partials/footer.pug