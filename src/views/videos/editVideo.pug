extends ../layout 

block content
    main.main-editVideo
        div.edit-video
            div.edit-video__header
                p.edit-video__header__title=video.title
                a(href="/").exit-btn 
                    i.fa-solid.fa-xmark
            div.edit-video__body
                form(method="post").edit-video__form
                    div.edit-video__form__input
                        span.edit-video__form__title 세부정보
                        div.video__input.video__input__title 
                            label(for="title")="제목(필수 항목)"
                            textarea(name="title", id="title", placeholder="동영상을 설명하는 제목 추가", required, maxlength="100", rows="3")=video.title
                        div.video__input.video__input__description 
                            label(for="description") 설명
                            textarea(name="description", id="description", placeholder="시청자에게 동영상에 대해 이야기하기", required, maxlength="5000", rows="10")=video.description
                        div.video__input.video__input__hashtags
                            label(for="hashtags") 해시태그
                            input(name="hashtags", type="text", id="hashtags", value=video.hashtags.join(), placeholder="해시태그 추가", required)
                        if errorMessage 
                            span.errorMessage=errorMessage
                    div.edit-video__form__file
                        video(src=`/${video.videoUrl}`) 
                    div.edit-video__form__btn
                        button(type="submit") 수정하기