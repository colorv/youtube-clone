extends ../layout 

block content
    img(src=`/${loggedInUser.avatarUrl}`, width="100", height="100")
    form(method="post", enctype="multipart/form-data") 
        label(for="avatar") Avatar 
        input(name="avatar", type="file", id="avatar", accept="image/*")
        input(name="newName", type="text", required, placeholder="Name" , value=loggedInUser.name)
        input(name="newEmail", type="email", required, placeholder="Email", value=loggedInUser.email) 
        input(name="newUsername", type="text", required, placeholder="User Name", value=loggedInUser.username) 
        input(name="newLocation", type="text", required, placeholder="Location", value=loggedInUser.location) 
        input(type="submit", value="Update Profile")
        if errorMessage
            br
            span=errorMessage 
        if (!loggedInUser.socialOnly)
            hr
            a(href="change-password") Change Password &rarr;