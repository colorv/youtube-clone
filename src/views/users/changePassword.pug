extends ../layout 

block content
    if errorMessage
        span=errorMessage 
    form(method="post")  
        input(name="currentPassword", type="password", required, placeholder="Current Password")
        input(name="newPassword", type="password", required, placeholder="New Password")
        input(name="newPassword2", type="password", required, placeholder="New password Confirm")
        input(type="submit", value="Change Password")